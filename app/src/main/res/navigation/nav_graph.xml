<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.bottomnavigation.views.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"

            app:popUpTo="@menu/menu"
            app:popUpToInclusive="true"

            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.bottomnavigation.views.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <argument
            android:name="getName"
            app:argType="string"
            android:defaultValue="Name"
            />

        <argument
            android:name="getEmail"
            app:argType="string"
            android:defaultValue="E-mail"
            />

        <argument
            android:name="getPassword"
            app:argType="string"
            android:defaultValue="Password"
            />
    </fragment>
    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.bottomnavigation.views.NotesFragment"
        android:label="fragment_notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/action_notesFragment_to_writeNoteFragment"
            app:destination="@id/writeNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/writeNoteFragment"
        android:name="com.example.bottomnavigation.views.WriteNoteFragment"
        android:label="fragment_write_note"
        tools:layout="@layout/fragment_write_note" />
</navigation>